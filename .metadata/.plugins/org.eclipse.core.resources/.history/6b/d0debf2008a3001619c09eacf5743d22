		$(function(){
			// when you are inside of this scope, it signals that jquery is fully loaded
			$("#create-course-dialog").dialog({
				autoOpen:true, 
				buttons:{
					"create":function(){
						alert("create btn clicked!");
					},
					Cancel:function(){
						$("#create-course-dialog").dialog("close");
					}	
				},
				close:function(){
					$("#create-course-dialog").dialog("close");
				}
			})
		});
